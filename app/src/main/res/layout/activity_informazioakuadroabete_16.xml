<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoaplicacion"
    tools:context=".Informazioakuadroabete_16">



    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnPreviousGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/imgprev" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/imgnext" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="292dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/casa" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="406dp"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/titulo"
                    android:layout_width="272dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:text="Izenburua: Ariatza etxea"
                    android:textAlignment="center"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textegilea"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:text="Egilea: "
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/texto1"
                    android:layout_width="148dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:ems="10"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/texturtea"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:text="Urtea: "
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/texto2"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:ems="10"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:inputType="textPersonName|number"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textEstiloa"
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_weight="0"
                    android:text="Estiloa: "
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/texto3"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:ems="10"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textLurraren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:text="Lurraren jabea: "
                    android:textAlignment="textEnd" />

                <EditText
                    android:id="@+id/texto4"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:ems="10"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>